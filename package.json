{
  "name": "eoc-app",
  "version": "0.0.1",
  "description": "EOC APP. End of Coffee app to track office inventory that is running out.",
  "main": "server/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "docker:build:client": "docker build client",
    "docker:build:server": "docker build server",
    "start": "npm run build && node server/index.js",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "nodemon server/index.js",
    "server-prod": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "eslint -c .eslintrc --ext \".jsx,.js\" \"client/\" --fix",
    "lint:server": "eslint -c .eslintrc --ext \".js\" \"server/\" --fix",
    "prettier": "prettier --config .prettierrc --write client/**/*.js && prettier --config .prettierrc --write client/**/*.scss && prettier --config .prettierrc --write server/**/*.js && prettier --config .prettierrc --write landing/**/*.css",
    "test": "jest -runInBand",
    "seed": "node server/seed/seedDb.js",
    "stylelint": "stylelint --fix client/src/**/*.scss"
  },
  "author": "Sandstream Development",
  "license": "MIT",
  "repository": "github:sandstreamdev/eoc",
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "body-parser": "1.18.3",
    "classnames": "2.2.6",
    "cookie-parser": "1.4.3",
    "cors": "2.8.5",
    "dotenv": "6.2.0",
    "express": "4.16.3",
    "express-session": "1.15.6",
    "history": "4.7.2",
    "lodash": "4.17.11",
    "mongodb": "3.1.10",
    "mongoose": "5.3.13",
    "passport": "0.4.0",
    "passport-google-oauth": "1.0.0",
    "prop-types": "15.6.2",
    "react": "16.5.2",
    "react-cookie-consent": "2.2.2",
    "react-dom": "16.5.2",
    "react-redux": "5.1.1",
    "react-router-dom": "4.3.1",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0",
    "reselect": "4.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.0.0",
    "@babel/plugin-proposal-class-properties": "7.0.0",
    "@babel/preset-env": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "babel-eslint": "10.0.0",
    "babel-jest": "24.0.0",
    "babel-loader": "8.0.0",
    "babel-plugin-jsx-remove-data-test-id": "2.0.0",
    "clean-webpack-plugin": "0.1.19",
    "concurrently": "4.0.0",
    "css-loader": "1.0.0",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.8.0",
    "eslint": "5.9.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-import-resolver-webpack": "0.10.1",
    "eslint-plugin-dependencies": "2.4.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "file-loader": "2.0.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.2.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "24.0.0",
    "jest-enzyme": "7.0.1",
    "jest-fetch-mock": "2.1.0",
    "lint-staged": "8.1.0",
    "mini-css-extract-plugin": "0.4.5",
    "node-sass": "4.10.0",
    "nodemon": "1.17.3",
    "prettier": "1.15.2",
    "redux-devtools-extension": "2.13.7",
    "redux-mock-store": "1.5.3",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.0",
    "stylelint": "9.10.1",
    "stylelint-config-recommended": "2.1.0",
    "stylelint-webpack-plugin": "0.10.5",
    "supertest": "3.4.2",
    "url-loader": "1.0.1",
    "webpack": "4.5.0",
    "webpack-cli": "3.0.8",
    "webpack-dev-server": "3.1.14"
  },
  "husky": {
    "hooks": {
      "pre-commit": " lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "stylelint-staged": "npm run stylelint",
  "lint-staged": {
    "linters": {
      "*.{js,jsx,json,scss,css,md}, !*.min.js": [
        "prettier --write",
        "git add"
      ],
      "*.{js,jsx}, !*.min.js": [
        "eslint -c .eslintrc --fix",
        "echo test",
        "git add"
      ],
      "**/*.scss": [
        "stylelint --syntax scss",
        "git add"
      ]
    }
  },
  "proxy": {
    "/auth/google**": {
      "target": "http://localhost:8080"
    }
  },
  "jest": {
    "projects": [
      "client/tests/jest.config.js",
      "server/tests/jest.config.js"
    ]
  }
}
