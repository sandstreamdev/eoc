{
  "name": "eoc-app",
  "version": "0.0.1",
  "description": "EOC APP. End of Coffee app to track office inventory that is running out.",
  "main": "server/index.js",
  "scripts": {
    "check": "npm-run-all lint format stylelint",
    "clear-demo": "node server/tasks/clearDemoData.js",
    "build:dev": "npm run merge-langs && webpack --progress",
    "build:prod": "npm run merge-langs && webpack --config webpack.config.production.js",
    "merge-langs": "NODE_ENV='production' babel-node client/src/locales/merge-messages.js",
    "dev": "npm-run-all -p start:server:dev start:client:dev",
    "format": "prettier --check \"{client,server}/**/*.{js,jsx}\"",
    "format:fix": "prettier --write \"{client,server}/**/*.{js,jsx}\"",
    "lint": "eslint ./ --ext \".js,.jsx\" --max-warnings=0",
    "lint:fix": "eslint ./ --ext \".js,.jsx\" --max-warnings=0 --fix",
    "seed": "node server/seed/seedDb.js",
    "start:client:dev": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "start:server:dev": "nodemon server/index.js",
    "start:server:prod": "node server/index.js",
    "stylelint": "stylelint client/**/*.scss --cache",
    "stylelint:fix": "stylelint client/src/**/*.scss --cache --fix",
    "test": "jest -runInBand --verbose"
  },
  "author": "Sandstream Development",
  "license": "MIT",
  "repository": "github:sandstreamdev/eoc",
  "dependencies": {
    "@sendgrid/mail": "6.4.0",
    "babel-plugin-react-intl": "3.2.0",
    "babel-polyfill": "6.26.0",
    "body-parser": "1.19.0",
    "classnames": "2.2.6",
    "connect-mongo": "2.0.3",
    "cookie-parser": "1.4.4",
    "cors": "2.8.5",
    "dotenv": "8.0.0",
    "express": "4.17.0",
    "express-session": "1.16.1",
    "history": "4.9.0",
    "lodash": "4.17.11",
    "mongo-sanitize": "1.0.1",
    "mongodb": "3.2.5",
    "mongoose": "5.5.10",
    "passport": "0.4.0",
    "passport-google-oauth": "2.0.0",
    "passport-local": "1.0.0",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-cookie-consent": "2.3.1",
    "react-dom": "16.8.6",
    "react-intl": "2.9.0",
    "react-linkify": "0.2.2",
    "react-popper": "1.3.3",
    "react-redux": "7.0.3",
    "react-router-dom": "5.0.0",
    "react-textarea-autosize": "7.1.0",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0",
    "reselect": "4.0.0",
    "validator": "11.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.5",
    "@babel/node": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-react": "7.0.0",
    "autoprefixer": "9.5.1",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.8.0",
    "babel-loader": "8.0.6",
    "babel-plugin-jsx-remove-data-test-id": "2.0.0",
    "clean-webpack-plugin": "2.0.2",
    "css-loader": "2.1.1",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.13.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-import-resolver-webpack": "0.11.1",
    "eslint-plugin-dependencies": "2.4.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.13.0",
    "file-loader": "3.0.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "2.3.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "jest-enzyme": "7.0.2",
    "jest-fetch-mock": "2.1.2",
    "lint-staged": "8.1.7",
    "mini-css-extract-plugin": "0.6.0",
    "node-sass": "4.12.0",
    "nodemon": "1.19.0",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "postcss-loader": "3.0.0",
    "prettier": "1.17.1",
    "redux-devtools-extension": "2.13.8",
    "redux-mock-store": "1.5.3",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "stylelint": "10.0.1",
    "stylelint-config-recommended": "2.2.0",
    "stylelint-scss": "3.6.1",
    "supertest": "4.0.2",
    "terser-webpack-plugin": "1.2.4",
    "url-loader": "1.1.2",
    "webpack": "4.32.2",
    "webpack-cli": "3.3.2",
    "webpack-dev-server": "3.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test",
      "pre-push": "npm run check && npm run test"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx,json,scss,css,md}, !*.min.js": [
        "prettier --write",
        "git add"
      ],
      "*.{js,jsx}, !*.min.js": [
        "eslint -c .eslintrc --fix",
        "echo test",
        "git add"
      ],
      "**/*.scss": [
        "stylelint --syntax scss",
        "git add"
      ]
    }
  },
  "jest": {
    "projects": [
      "client/tests/jest.config.js",
      "server/tests/jest.config.js"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
